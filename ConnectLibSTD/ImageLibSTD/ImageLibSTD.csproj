<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.2.0-beta</Version>
    <Authors>Micah Vertal</Authors>
    <Company>Tornadoenterprises</Company>
    <Description>Imaging library based off of the ConnectLibSTD connection library</Description>
    <Product>ConnectLib.ImageLibSTD</Product>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Copyright>Tornadoenterprises 2018</Copyright>
    <PackageLicenseUrl>http://apache.org/licenses/LICENSE-2.0.html</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Tornadocraver/ConnectLib/tree/master/ConnectLibSTD/ImageLibSTD</PackageProjectUrl>
    <PackageIconUrl>https://www.tornadoenterprises.com/content/images?id=ImageLibIcon</PackageIconUrl>
    <RepositoryUrl>https://github.com/Tornadocraver/ConnectLib/tree/master/ConnectLibSTD</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>C#, csharp, dotnet, connection, manager, messaging, library, images, imaging, video</PackageTags>
    <PackageReleaseNotes>First release of ImageLibSTD.</PackageReleaseNotes>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\Code\ImageLib\ImageClient.cs" Link="ImageClient.cs" />
    <Compile Include="..\..\Code\ImageLib\ImageServer.cs" Link="ImageServer.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.1-beta1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ConnectLibSTD\ConnectLibSTD.csproj" />
  </ItemGroup>

</Project>
